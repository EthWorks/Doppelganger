{
  "name": "ethereum-doppelganger",
  "version": "0.0.6",
  "description": "Smart contract mocking library",
  "repository": "https://github.com/EthWorks/Doppelganger.git",
  "author": "Antoni Kedracki <account@ethworks.io> (http://ethworks.io)",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "rm -rf dist && yarn build",
    "build": "yarn build:sol && yarn build:ts && yarn build:copyFiles",
    "build:sol": "yarn waffle ./waffle_lib.json",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:copyFiles": "cp -r lib/contracts dist/contracts",
    "test": "mocha \"test/**/*.ts\"",
    "test:build:sol": "yarn waffle ./waffle_test.json",
    "dev:lint": "solium -d contracts/"
  },
  "dependencies": {
    "ethers": "^4.0.18"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.0",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ethereum-waffle": "^1.0.5",
    "ganache-core": "^2.2.1",
    "sinon": "^6",
    "sinon-chai": "^3.2.0",
    "solium": "^1.1.8",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
